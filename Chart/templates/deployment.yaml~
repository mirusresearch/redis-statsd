apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: mountie
  labels:
    app: {{ template "Chart.name" . }}
    chart: {{ template "Chart.chart" . }}
    release: {{ .Release.Name }}
    heritage: {{ .Release.Service }}
spec:
  replicas: 1
  revisionHistoryLimit: 1
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 0
  template:
    metadata:
      labels:
        app: {{ template "Chart.name" . }}
        release: {{ .Release.Name }}
    spec:
      containers:
        - name: app
          image: {{ .Values.image.repository }}/mountie:{{ .Values.image.tag }}
          imagePullPolicy: {{ .Values.image.pullPolicy }}
          command: [ "yarn", "run", "server" ]
          env:
            {{- range .Values.config }}
            - name: MOUNTIECONF_{{ . | upper }}
              valueFrom:
                secretKeyRef:
                  name: mountie
                  key: {{ . }}
            {{- end }}
            - name: MOUNTIECONF_SERVER_HOST
              value: "0.0.0.0"
            - name: MOUNTIECONF_SERVER_PORT
              value: {{ .Values.service.targetPort | quote }}
            - name: NODE_IP
              valueFrom:
                fieldRef:
                  fieldPath: status.hostIP
          ports:
            - name: http
              containerPort: {{ .Values.service.targetPort }}
              protocol: TCP
          readinessProbe:
            httpGet:
              path: /service-status
              port: http
          resources:
            limits:
              cpu: 200m
              memory: 256Mi
            requests:
              cpu: 200m
              memory: 256Mi
